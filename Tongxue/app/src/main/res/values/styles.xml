<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--START 主页底部按钮和文字-->

    <style name="main_bottom_text">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:gravity">center_horizontal|top</item>
    </style>
    <style name="center_text">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:gravity">center_horizontal|top</item>
    </style>

    <!--END 主页底部按钮和文字-->



    <!--START 登录 注册 忘记密码  修改密码 页面的输入框样式-->

    <style name="rlfc_linear">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/mid_margin</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="rlfc_imageview">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/mid_margin</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="divider_vertical">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_marginLeft">@dimen/mid_margin</item>
        <item name="android:background">@color/mainBgColor</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="rlfc_edt">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <!--END 登录 注册 忘记密码  修改密码 页面的输入框样式-->

    <style name="user_detail_linear">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/mid_margin</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <!--====start=个人中心style===-->
    <style name="user_detail_linear_left_text">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">@dimen/mid_margin</item>
    </style>

    <style name="user_detail_linear_right_text">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingRight">@dimen/mid_margin</item>
    </style>
    <!--===end个人中心style====-->



    <style name="pop_campus_rl_text">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">9</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="pop_campus_rl_img">
        <item name="android:visibility">invisible</item>
        <item name="android:src">@mipmap/gou</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>


   <!--start_设置页面条目-->
    <style name="setting_rl">
        <item name="android:layout_marginTop">@dimen/mid_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="setting_rl_text">
        <item name="android:layout_marginLeft">@dimen/mid_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textSize">16dp</item>
    </style>


    android:="@dimen/min_margin"
    android:="true"
    android:="true"
    android:="25dp"
    android:=""
    android:=""
    <style name="setting_rl_img">
        <item name="android:layout_marginRight">@dimen/mid_margin</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:src">@mipmap/icon_right_arrow</item>
    </style>

    <!--end_设置页面条目-->

</resources>
