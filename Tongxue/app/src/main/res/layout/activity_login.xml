<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBgColor"
    android:orientation="vertical">

    <RelativeLayout style="@style/login_title_height">

        <TextView
            style="@style/login_title"
            android:layout_centerInParent="true"
            android:text="登 录" />

        <TextView
            android:id="@+id/tv_login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="17dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#fad" />

    <LinearLayout style="@style/login_linear">

        <ImageView
            style="@style/login_imageview"
            android:src="@mipmap/phone" />

        <View style="@style/login_line" />

        <EditText
            android:id="@+id/edt_login_phoneNum"
            style="@style/login_edt"
            android:background="@drawable/shape_edt"
            android:hint="请输入手机号" />
    </LinearLayout>

    <LinearLayout style="@style/login_linear">

        <ImageView
            style="@style/login_imageview"
            android:src="@mipmap/password" />

        <View
            style="@style/login_line"
             />

        <EditText
            android:id="@+id/edt_login_passWord"
            style="@style/login_edt"
            android:background="@drawable/shape_edt"
            android:hint="密码" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/btn_login"
        style="@style/login_btn_submit"
        android:text="登录" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已阅读并同意---"/>
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_marginLeft="20dp"
         android:layout_height="wrap_content">
         <TextView

             android:id="@+id/tv_login_fogetpsw"
             android:layout_width="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_height="wrap_content"
             android:textColor="@color/mainColor"
             android:text="忘记密码？"/>
         <TextView
             android:layout_width="100dp"
             android:layout_height="1dp"
             android:layout_below="@id/tv_login_fogetpsw"
             android:background="@color/mainColor"/>
     </RelativeLayout>
    </LinearLayout>
</LinearLayout>