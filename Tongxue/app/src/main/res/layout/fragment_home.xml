<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/id_home_title"
        layout="@layout/customer_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/id_home_choose"
        android:layout_below="@+id/id_home_title"
        android:background="#c1bcbc"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_main_fenlei1"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:text="数码"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_xiaoqu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_main_fenlei2"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:text="手机"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_xiaoqu"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/id_home_choose"
        android:id="@+id/id_home_lv">

    </ListView>

</RelativeLayout>
