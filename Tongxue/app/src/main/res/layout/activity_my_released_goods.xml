<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fandexian.tongxue.MyColects">

    <include
        android:id="@+id/id_my_released_title"
        layout="@layout/customer_title"/>
    <RelativeLayout
        android:id="@+id/id_my_release_progress"
        android:layout_below="@+id/id_my_released_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blackTextColor"
            android:alpha="0.2"/>
        <ProgressBar
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/id_my_released_goods_lv"
        android:layout_below="@+id/id_my_released_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</RelativeLayout>