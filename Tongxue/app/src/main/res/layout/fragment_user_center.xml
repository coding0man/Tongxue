<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBgColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/id_center_title"
        android:alpha="30">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/id_center_bg_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mainColor"
            android:alpha="0.2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_title_text"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:text="个人中心"/>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/id_center_img_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/xiaocao"
            app:civ_border_width="1dp"
            app:civ_border_color="#FFFFFFFF"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_center_img_head"
            android:layout_toEndOf="@+id/id_center_img_head">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:paddingTop="4dp"
        android:layout_below="@+id/id_center_title"
        android:id="@+id/id_ll"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/id_center_ll_released"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/id_main_img1"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_center_fabu"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="我的发布"
                android:id="@+id/id_main_tv1"
                style="@style/center_text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_center_ll_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/id_main_img2"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_center_shoucang"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="我的收藏"
                android:id="@+id/id_main_tv2"
                style="@style/center_text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_center_ll_personal_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/id_main_img3"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_center_grxx"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="个人信息"
                android:id="@+id/id_main_tv3"
                style="@style/center_text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_center_ll_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/id_main_img4"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_center_shezhi"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="设置"
                android:id="@+id/id_main_tv4"
                style="@style/center_text"/>
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
