<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/id_center_title"
        android:background="@color/mainColor">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_title_text"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:text="个人中心"/>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/id_center_head"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="16dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"
            app:civ_border_width="1dp"
            app:civ_border_color="#FFFFFFFF"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_center_head"
            android:layout_toEndOf="@+id/id_center_head">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingTop="4dp"
        android:layout_below="@+id/id_center_title"
        android:layout_marginTop="24dp"
        android:id="@+id/id_ll">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/id_ll_fabu"
            android:layout_weight="1"
            android:weightSum="2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:id="@+id/id_main_img1"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_homepage_default"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="已发布"
                android:id="@+id/id_main_tv1"
                style="@style/main_bottom_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/id_ll_shoucang"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:id="@+id/id_main_img2"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_fabu_default"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="已收藏"
                android:id="@+id/id_main_tv2"
                style="@style/main_bottom_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/id_ll_xinxi"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:id="@+id/id_main_img3"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_user_center_default"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="个人信息"
                android:id="@+id/id_main_tv3"
                style="@style/main_bottom_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/id_ll_shezhi"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:id="@+id/id_main_img4"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_user_center_default"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="设置"
                android:id="@+id/id_main_tv4"
                style="@style/main_bottom_text"/>
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
